@using SpotifyVPY322.Dto.AlbumVM
@using SpotifyVPY322.Model
@using SpotifyVPY322.Dto.Album

@model UpdateAlbumVM

<form asp-action="Edit">
    <div>
        <input type="hidden" asp-for="Id">
    </div>
    <div>
        <label>Title: </label>
        <input asp-for="Title">
    </div>
    <div>
        <label>PhotoUrl: </label>
        <input asp-for="PhotoUrl">
    </div>
    <div>
        <label>Release Date: </label>
        <input asp-for="ReleaseDate" type="date">
    </div>
    <div>
        <label>Artist: </label>
        <select asp-for="ArtistId" asp-items="Model.Artists"></select>
    </div>
    <input type="submit" value="Отредактировать" />
</form>